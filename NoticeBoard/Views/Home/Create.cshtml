@model NoticeBoard.Models.Note

<form asp-action="CreateNote" method="post" class="form-row" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Title" class="col-md-2 custom-control-label"></label>
        <input asp-for="Title" class="form-control" />
        <div asp-validation-for="Title" class="text-danger"></div>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="col-md-2 custom-control-label"></label>
        <input asp-for="Content" class="form-control" />
        <div asp-validation-for="Content" class="text-danger"></div>
    </div>


    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create Note" />
        
    </div>
</form>